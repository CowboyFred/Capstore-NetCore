@model CapStore.Models.Cap
@{
    ViewBag.Title = "Edit the cap";
}
<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <form asp-action="Edit" asp-controller="EditCaps" asp-route-id="@Model.Id" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Change the name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Change the description</label>
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Change the price</label>
                    <input type="text" asp-for="Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label">Upload image</label>
                    <input type="file" name="uploadedFile" />
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Change the category</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.categoryList"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label">Change the supplier</label>
                    <select asp-for="SupplierId" asp-items="ViewBag.supplierList"></select>
                </div>
                <div class="checkbox col-sm-12">
                    <input type="checkbox" asp-for="Visible" />
                    <label asp-for="Visible">Availible in stock</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save changes" class="btn btn-default" />
                </div>
            </form>
            </div>
</div>
</div>