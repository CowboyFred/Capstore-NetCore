@model CapStore.Models.Cap
@{
    ViewBag.Title = "Add a new cap";
}
<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <form asp-action="Create" asp-controller="EditCaps" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Price</label>
                    <input type="text" asp-for="Price" class="form-control" step=",01" />
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label">Upload image</label>
                    <input type="file" name="uploadedFile" />
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Choose Category</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.categoryList"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label">Choose Supplier</label>
                    <select asp-for="SupplierId" asp-items="ViewBag.supplierList"></select>
                </div>
                <div class="checkbox col-sm-12">
                    <input type="checkbox" asp-for="Visible" />
                    <label asp-for="Visible">Availible in stock</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </form>
            </div>
</div>
</div>
