@model IEnumerable<CapStore.Models.Cap> 

            <!DOCTYPE html>

            <html>
            <body>


                <div class="mainmenu-area">
                    <div class="container">
                        <div class="row">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li><a asp-controller="Store" asp-action="Index">Store</a></li>
                                    <li><a asp-controller="Cart" asp-action="Index">Cart</a></li>
                                    <li><a asp-controller="Order" asp-action="Index">My Orders</a></li>
                                    <li><a asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div> <!-- End mainmenu area -->


                <div class="slider-area">
                    <!-- Slider -->
                    <div class="block-slider block-slider4">
                        <ul class="" id="bxslider-home4">
                            <li>
                                <img src="~/images/slide1.png" alt="Slide">
                                <div class="caption-group">
                                    <h2 class="caption title">
                                        Vintage <span class="primary"> <strong>Caps</strong></span>
                                    </h2>
                                    <h4 class="caption subtitle">Right from 1900</h4>
                                    <a class="caption button-radius" asp-controller="Store" asp-action="Index"><span class="icon"></span>Shop now</a>
                                </div>
                            </li>
                            <li>
                                <img src="~/images/slide2.png" alt="Slide">
                                <div class="caption-group">
                                    <h2 class="caption title">
                                        Graduation <span class="primary"><strong>Soon</strong></span>
                                    </h2>
                                    <h4 class="caption subtitle">Get 50% discount for grad caps</h4>
                                    <a class="caption button-radius" asp-controller="Store" asp-action="Index"><span class="icon"></span>Shop now</a>
                                </div>
                            </li>
                            <li>
                                <img src="~/images/slide3.png" alt="Slide">
                                <div class="caption-group">
                                    <h2 class="caption title">
                                        Now even <span class="primary">Hats <strong>in Store</strong></span>
                                    </h2>
                                    <h4 class="caption subtitle">Get 'em now!!!</h4>
                                    <a class="caption button-radius" asp-controller="Store" asp-action="Index"><span class="icon"></span>Shop now</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <!-- ./Slider -->
                </div> <!-- End slider area -->


                <div class="promo-area">
                    <div class="zigzag-bottom"></div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3 col-sm-6">
                                <div class="single-promo promo1">
                                    <i class="fa fa-refresh"></i>
                                    <p>30 Days return</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="single-promo promo2">
                                    <i class="fa fa-truck"></i>
                                    <p>Free shipping</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="single-promo promo3">
                                    <i class="fa fa-lock"></i>
                                    <p>Secure payments</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="single-promo promo4">
                                    <i class="fa fa-gift"></i>
                                    <p>New products</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- End promo area -->

                <div class="maincontent-area">
                    <div class="zigzag-bottom"></div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="latest-product">
                                    <h2 class="section-title">Latest Products</h2>
                                    <div class="product-carousel">
                                        @foreach (var cap in Model)
                                        {
                                            <div class="single-product">
                                                <div class="product-f-image">
                                                    <img src="@Url.Content(cap.Image)" alt="">
                                                    <div class="product-hover">
                                                        <a asp-action="AddToCart" asp-controller="Cart" asp-route-capId="@cap.Id" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                                        <a asp-action="Details" asp-controller="Store" asp-route-id="@cap.Id" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                                    </div>
                                                </div>

                                                <h2><a asp-action="Details" asp-controller="Store" asp-route-id="@cap.Id">@cap.Name</a></h2>

                                                <div class="product-carousel-price">
                                                    <ins>@cap.Price.ToString("c")</ins>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- End main content area -->

            </body>
        </html>
