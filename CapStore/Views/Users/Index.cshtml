@model IEnumerable<CapStore.Models.Customer>
@{
    ViewBag.Title = "Customers list";
}
<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <table class="table">
                <tr><th>Username</th><th>Last name</th><th>First name</th><th>Email</th><th>Phone</th><th>Address</th><th>Status</th><th></th></tr>
                @foreach (var customer in Model)
                {
                <tr>
                    <td>@customer.UserName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.FirstName</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.Address</td>
                    @if (customer.LockoutEnabled == true)
    {
                <td>Active</td>
}
else
{
                <td>Blocked</td>

}
                    <td>
                        <form asp-action="Delete" asp-route-id="@customer.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@customer.Id">See details & Change</a>
                            @if (customer.LockoutEnabled == true)
            {
                <a class="btn btn-sm btn-primary" asp-action="Block" asp-route-id="@customer.Id">Block</a>
}
else
{
                <a class="btn btn-sm btn-primary" asp-action="Unblock" asp-route-id="@customer.Id">Unblock</a>

}

                            <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
                        </form>
                    </td>
                </tr>
                }
            </table>
            <a asp-action="Create" class="btn btn-sm btn-primary">Add new customer</a>
            </div>
</div>
</div>