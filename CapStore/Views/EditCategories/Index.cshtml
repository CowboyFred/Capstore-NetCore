@model IEnumerable<CapStore.Models.Category>
@{
    ViewBag.Title = "Categories list";
}
<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <table class="table">
                <tr><th>Category Name</th><th>Description</th><th></th></tr>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="EditCategories" asp-route-id="@category.Id">Edit</a> |
                            <a asp-action="Delete" asp-controller="EditCategories" asp-route-id="@category.Id">Delete</a>
                        </td>
                    </tr>
                }
            </table>
            <a asp-action="Create" class="btn btn-sm btn-primary">Add a new category</a>
            </div>
</div>
</div>