@model CapStore.Models.Category
@{
    ViewBag.Title = "Category deleting";
}
<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <div>
                <dl class="dl-horizontal">
                    <dt>Name</dt>
                    <dd>
                        @Html.DisplayFor(Model => Model.Name)
                    </dd>

                    <dt>Description</dt>
                    <dd>
                        @Html.DisplayFor(Model => Model.Description)
                    </dd>

                </dl>

                <div>
                    <form asp-controller="EditCategories" asp-action="Delete" method="post">
                        <div class="form-group">
                            <input type="submit" class="btn btn-default" value="Delete" />
                        </div>
                    </form>
                </div>
            </div>
            </div>
</div>
</div>